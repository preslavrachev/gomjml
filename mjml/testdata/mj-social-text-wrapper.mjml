<mjml>
  <mj-body>
    <mj-wrapper padding-left="20px" padding-top="20px" padding-right="20px" padding-bottom="20px">
      <mj-section padding-bottom="25px" padding-left="25px" padding="20px 0" background-color="#ffffff" border-radius="8px" padding-top="25px" padding-right="25px">
        <mj-column width="100%" padding="0">
          <mj-text line-height="1.3" color="#EC407A" background-color="transparent" font-family="Arial, sans-serif" font-style="normal" align="center" font-size="24px" font-weight="bold" text-transform="none" padding-top="10px" padding-right="25px" padding-left="25px" text-decoration="none" padding-bottom="20px">Connect With Us</mj-text>
          <mj-social mode="horizontal" table-layout="auto" text-padding="4px 4px 4px 0px" inner-padding="8px" line-height="22px" padding-top="20px" padding-right="25px" padding-bottom="20px" border-radius="3px" icon-size="40px" padding-left="25px" align="center" container-background-color="transparent" icon-height="40px">
            <mj-social-element name="facebook" href="https://facebook.com" background-color="#3b5998" border-radius="3px" />
            <mj-social-element border-radius="3px" name="instagram" href="https://instagram.com" background-color="#E4405F" />
            <mj-social-element background-color="#000000" border-radius="3px" name="x" href="https://x.com" />
          </mj-social>
        </mj-column>
      </mj-section>
    </mj-wrapper>
  </mj-body>
</mjml>